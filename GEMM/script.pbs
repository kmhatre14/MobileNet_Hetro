#!/bin/sh
#PBS -q mamba
#PBS -N conMat
#PBS -l nodes=1:ppn=1:gpus=1
#PBS -l walltime=00:01:00
module load cuda/9.2
CUR_DIR=$(pwd)
cd $CUR_DIR/Hetro/Project/GEMM
hostname=`hostname -s`
echo "Hostname : " $hostname
if [ ! -e hello ]; then
        echo -e "running: make conMat ...\n         \c"
        rm conMat
	make conMat
fi
echo -e "running: ./conMat ...\n       \c"
./conMat
echo
